{
  "name": "tier-analysis-app",
  "productName": "Cascading Failure Tier Analysis",
  "version": "1.0.3",
  "description": "A graphical app wrapped around the byuboydlab/tier_analysis repo",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build-python": "mamba run -n tier-analysis-app --cwd ./src/python pyinstaller tier_analysis.spec",
    "build-app": "electron-builder",
    "build": "pnpm build-python && pnpm build-app"
  },
  "build": {
    "appId": "io.github.byuboydlab.tier-analysis-app",
    "files": [
      "src/*",
      "!src/executables",
      "!src/icon",
      "!src/python"
    ],
    "icon": "src/icon/boyd_logo_rounded_corners.png",
    "linux": {
      "extraFiles": [
        {
          "from": "src/python/dist/tier_analysis_app_IsaacUtah1379",
          "to": "executables/tier_analysis_app_IsaacUtah1379"
        }
      ],
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "extraFiles": [
        {
          "from": "src/python/dist/tier_analysis_app_IsaacUtah1379.exe",
          "to": "executables/tier_analysis_app_IsaacUtah1379.exe"
        }
      ],
      "target": [
        "nsis"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byuboydlab/tier-analysis-app.git"
  },
  "author": "Isaac Elmer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/byuboydlab/tier-analysis-app/issues"
  },
  "homepage": "https://github.com/byuboydlab/tier-analysis-app#readme",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "find-process": "^2.0.0"
  }
}
